{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "lib": [
      "ES2015"
    ],
    "moduleResolution": "node",
    "sourceMap": true,    
    "outDir": "./build",    
    "strict": true,
    "esModuleInterop": true,
    "noEmitOnError": true,    
    "noImplicitAny": true,
    "typeRoots": [
      "./@types",       
      "./node_modules/@types",      
    ] 
  },
  "include": ["src"],
  "exclude": [
    "node_modules"   
  ],
}